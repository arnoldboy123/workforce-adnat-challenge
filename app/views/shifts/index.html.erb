<table>
  <tr>
    <th>Employee name</th>
    <th>Shift Date</th>
    <th>Start Time</th>
    <th>Finish Time</th>
    <th>Break Length (minutes)</th>
    <th>Hours worked</th>
    <th>Shift cost</th>
  </tr>

  <% if @shifts.empty? %>
  </table>

  <%= link_to "Create new shift", new_organisation_shift_path(@org)%>
  <% else %>
    <% @shifts.each do |shift|%>
      <tr>
        <td><%= shift.user.name%> </td>
        <td><%= shift.start.to_date %></td>
        <td><%= shift.start.strftime("%H:%M") %></td>
        <td><%= shift.finish.strftime("%H:%M") %></td>
        <td><%= shift.break_length%></td>
        <td><%= ((shift.finish - shift.start)/3600 - shift.break_length/60.to_f).round(2) %></td>
        <td>$<%= (((shift.finish - shift.start)/3600 - shift.break_length/60.to_f) * @org.hourly_rate).round(2) %></td>
      </tr>
    <% end%>
  </table>
  <%= link_to "Create new shift", new_organisation_shift_path(@org)%>
  <% end %>
